<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="unican.es.grupo4_tus_santander">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.Main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.Favoritos.FavsActivity"
            android:label="@string/title_activity_favs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Lineas.LineasActivity"
            android:label="@string/title_activity_lineas" />
        <activity
            android:name=".View.Paradas.ParadasActivity"
            android:label="@string/title_activity_paradas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Tarifas.TarifasActivity"
            android:label="@string/title_activity_tarifas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Restricciones.RestriccionesActivity"
            android:label="@string/title_activity_restricciones"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.Ajustes.AjustesActivity"
            android:label="@string/title_activity_ajustes"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>